<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CameraActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <Button
        android:id="@+id/clickImage"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Click pic"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/cropImage"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Crop pic"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickImage"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/captureSignature"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Capture signature"
        android:paddingHorizontal="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cropImage"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="go otp"
        android:paddingHorizontal="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/captureSignature"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/sendMsg"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Send message on whatsapp"
        android:paddingHorizontal="16dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/captureSignature"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>